{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ROS2 colcon build",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-i",
        "-c",
        "source /opt/ros/jazzy/setup.bash && cd ${workspaceFolder} && /usr/bin/colcon build --symlink-install"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
